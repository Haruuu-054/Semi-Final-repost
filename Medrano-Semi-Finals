//instantiation
//import express
const express = require('express')
const app = express()
const moment = require('moment')

//importing mysql
const mysql = require('mysql')
const cors = requires('cors')
//port number
const PORT = process.env.PORT || 5000;

const logger = (req, res, next) => {
    console.log(`${req.protocol}://${req.get('host')}${req.originalUrl} : ${moment().format()}`)
    next()
}

app.use(logger)
app.use(cors())
app.use(express.json());
//connection to mysql
const connection = mysql.createConnection({
    host: 'bxvhslvlblmily3wzuea-mysql.services.clever-cloud.com',
    user: 'uu63zptjdrshoqw1',
    password: 'UyflJ8eoTdhVOYs9WFes',
    database: 'bxvhslvlblmily3wzuea',
});
//initilization of connection
connection.connect();

//API
//get request and response are the parameters
app.get("/api/products", (req, res) => {
    //create querry
    connection.query("SELECT * FROM product_info", (err, rows, fields)=>{
        //checking error
        if(err) throw err;
        //response
        //key value pair
        res.json(rows);
    })
})

//API
//passing the id parameter
app.get("/api/product_info/:product-id", (req, res) => {
    const id=req.params.id;
    connection.query(`SELECT * FROM product_info WHERE product-id ='${id}'` , (err, rows, fields) => {
        if (err) throw err;

        if(rows.lenght > 0){
            res.json(rows);
        }else{
            res.status(400).json({msg:`${id} id not found!`});
        }
    } )
    //res.send(id);

})

app.listen(1001, () => {
    console.log(`Server is running on ${PORT}`);
})
